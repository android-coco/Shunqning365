<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Dialog_Scale_Animation">
        <item name="android:windowEnterAnimation">@anim/scale_center_enter</item>
        <item name="android:windowExitAnimation">@anim/scale_center_exit</item>
    </style>

    <style name="Dialog_Alpha_Animation">
        <item name="android:windowEnterAnimation">@anim/alpha_enter</item>
        <item name="android:windowExitAnimation">@anim/alpha_exit</item>
    </style>
</resources>
