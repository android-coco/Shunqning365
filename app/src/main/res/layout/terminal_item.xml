<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/list_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_found_list_bg"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_watch"
        android:layout_width="@dimen/space_40"
        android:layout_height="@dimen/space_40"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="4dp"
        android:src="@mipmap/icon_watch"
        android:layout_marginStart="@dimen/space_5"
        android:gravity="center"
        android:tint="@color/actionsheet_blue"
        android:visibility="visible"/>
    <ImageView
        android:id="@+id/img_watch1"
        android:layout_width="@dimen/space_40"
        android:layout_height="@dimen/space_40"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="4dp"
        android:src="@mipmap/icon_watch"
        android:layout_marginStart="@dimen/space_5"
        android:gravity="center"
        android:tint="@color/colorYellow"
        android:visibility="visible"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@id/img_watch"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="12.0dip"
                android:paddingRight="4.0dip"
                android:text="终端名称："
                android:textColor="@android:color/black"
                android:textSize="@dimen/space_16"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/timing_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingRight="4.0dip"
                android:text="基站"
                android:textColor="@color/index_black"
                android:textSize="@dimen/space_16"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="12.0dip"
                android:paddingRight="4.0dip"
                android:text="当时位置："
                android:textColor="@android:color/black"
                android:textSize="@dimen/space_16"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/timing_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingRight="4.0dip"
                android:text="湖南常德就了解了解了解了解了"
                android:textColor="@color/index_black"
                android:textSize="@dimen/space_16"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="12.0dip"
                android:paddingRight="4.0dip"
                android:text="当时状态："
                android:textColor="@android:color/black"
                android:textSize="@dimen/space_16"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/timing_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingRight="4.0dip"
                android:text="SOS报警"
                android:textColor="@color/index_black"
                android:textSize="@dimen/space_16"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="12.0dip"
                android:paddingRight="4.0dip"
                android:text="SN号："
                android:textColor="@android:color/black"
                android:textSize="@dimen/space_16"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:text="2015-10-21 17:46:09"
                android:textColor="@color/index_black"
                android:textSize="@dimen/space_16"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/timing_edit"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:text="电量：10%"/>

        <TextView
            android:id="@+id/timing_del"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:text="信号：10%"/>
    </LinearLayout>
</RelativeLayout>