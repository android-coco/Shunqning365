<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/basetitle"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48"
        android:layout_marginBottom="@dimen/space_20"
        android:layout_marginEnd="@dimen/space_24"
        android:layout_marginStart="@dimen/space_24"
        android:layout_marginTop="@dimen/space_30">

        <FrameLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/space_48">

            <RelativeLayout
                android:id="@+id/rl_address_book"
                android:layout_width="@dimen/space_50"
                android:layout_height="@dimen/space_48"
                android:layout_gravity="end"
                android:background="@drawable/photo_select_end"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_address_book"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/img_addresbook"
                    android:contentDescription="@null"/>
            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_48"
            android:background="@drawable/single_gradient">

            <AutoCompleteTextView
                android:id="@+id/phonenum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/space_34"
                android:background="@null"
                android:completionThreshold="1"
                android:dropDownVerticalOffset="8dp"
                android:hint="输入设备MEID"
                android:paddingEnd="@dimen/space_15"
                android:paddingStart="@dimen/space_45"
                android:textColor="@color/main_tab_bottom_notsel"
                android:textSize="@dimen/text_size_18"/>

            <ImageView
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:layout_gravity="center|start"
                android:layout_marginStart="@dimen/space_14"
                android:background="@mipmap/long_report"
                android:visibility="gone"
                android:contentDescription="@null"/>
        </FrameLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/prompt_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_8"
        android:layout_marginStart="@dimen/space_26"
        android:text="选择拨打时间(分)"
        android:visibility="gone"
        android:textColor="@color/dialog_black"
        android:textSize="@dimen/text_size_18"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48"
        android:layout_marginEnd="@dimen/space_24"
        android:layout_marginStart="@dimen/space_24"
        android:background="@drawable/time_selector"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/long_num_five"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_48"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <!--
        <net.fitcome.frame.view.BaseTextView
            android:id="@+id/long_num_three"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_46"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/three"
            android:textColor="@color/other_grayblack_bg"
            android:textSize="18sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/round_bnt_no"
            android:gravity="center" />

        -->


        <!--
        <net.fitcome.frame.view.BaseTextView
            android:id="@+id/long_num_five"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_46"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/five"
            android:textColor="@color/other_grayblack_bg"
            android:textSize="18sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/round_bnt_no"
            android:gravity="center" />
        -->

        <TextView
            android:id="@+id/long_num_ten"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_46"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/main_tab_bottom_notsel"
            android:textSize="18sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/round_bnt_no"/>

        <TextView
            android:id="@+id/long_num_fifteen"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_46"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="15"
            android:textColor="@color/main_tab_bottom_notsel"
            android:textSize="18sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/round_bnt_no"/>

        <TextView
            android:id="@+id/long_num_twenty"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_46"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="20"
            android:textColor="@color/main_tab_bottom_notsel"
            android:textSize="18sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/round_bnt_no"/>

        <TextView
            android:id="@+id/long_num_twenty_five"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_46"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="25"
            android:textColor="@color/main_tab_bottom_notsel"
            android:textSize="18sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/round_bnt_no"/>

        <TextView
            android:id="@+id/long_num_thirty"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_46"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="30"
            android:textColor="@color/main_tab_bottom_notsel"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/long_num_zero"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_48"
            android:layout_weight="1"
            android:background="@drawable/time_selector_end"
            android:gravity="center"
            android:text="监听"
            android:textColor="@color/main_tab_bottom_notsel"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/space_20"
        android:layout_marginStart="@dimen/space_24"
        android:layout_marginTop="@dimen/space_10"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_28"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="选择监听及监听模式"
            android:textColor="@color/dialog_black"
            android:textSize="@dimen/text_size_18"/>

        <ImageView
            android:id="@+id/monitor_model"
            android:layout_width="@dimen/space_60"
            android:layout_height="@dimen/space_30"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/space_24"
            android:visibility="gone"
            android:background="@mipmap/no_opend"
            android:contentDescription="@null"/>
    </LinearLayout>

    <Button
        android:id="@+id/sendlongrep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_24"
        android:layout_marginStart="@dimen/space_24"
        android:layout_marginTop="@dimen/space_56"
        android:background="@drawable/login_btn_selector"
        android:gravity="center"
        android:paddingBottom="@dimen/space_10"
        android:paddingTop="@dimen/space_10"
        android:text="确认添加"
        android:textColor="@color/white"
        android:textSize="@dimen/space_18"/>

</LinearLayout>