<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">

        <shape android:shape="rectangle">

            <!-- 描边 -->
            <stroke android:width="1dp" android:color="@color/colorGreen"></stroke>
            <!-- 实心   白色就是空心圆(原来背景是白色) -->
            <!--             #4bbe6c -->
            <solid android:color="@color/colorGreen"></solid>
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <!--             360 -->
            <corners android:radius="@dimen/space_20" />

            <!-- padding: Button 里面的文字与Button边界的间隔 -->
            <padding android:bottom="0dp" android:left="10dp" android:right="10dp" android:top="0dp" />
        </shape>
    </item>
    <item android:state_pressed="true"><shape android:shape="rectangle">

        <!-- 描边 -->
        <!--             @color/btn_login_select -->
        <stroke android:width="1dp" android:color="@color/colorGreenDark"></stroke>
        <!-- 实心   白色就是空心圆(原来背景是白色) -->
        <solid android:color="@color/colorGreenDark"></solid>
        <!-- 设置按钮的四个角为弧形 -->
        <!-- android:radius 弧形的半径 -->
        <corners android:radius="@dimen/space_20" />
        <!-- padding: Button 里面的文字与Button边界的间隔 -->
        <padding android:bottom="0dp" android:left="10dp" android:right="10dp" android:top="0dp" />
    </shape></item>

</selector>